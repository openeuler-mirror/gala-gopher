#
# Dockerfile for building A-Ops gala-gopher docker image for openEuler 20.03 lts sp1.
#
# Usage:
# docker build -f Dockerfile_2003_sp1_x86_64 -t gala-gopher:1.0.2 .
#

# base image
FROM hub.oepkgs.net/openeuler/openeuler_x86_64:20.03-lts-sp1

MAINTAINER GALA

# container work directory
WORKDIR /gala-gopher

# copy current directory files to container work directory
ADD . /gala-gopher

# agent configuration is needed for intranet users
# ENV http_proxy=http://user:pass@proxy.com:8080
# ENV https_proxy=http://user:pass@proxy.com:8080

COPY ./entrypoint.sh /
RUN chmod +x /entrypoint.sh

# install gala-gopher
RUN yum install -y libbpf-0.3-1.oe1.x86_64.rpm \
    && yum install -y gala-gopher-1.0.2-2.x86_64.rpm \
    && yum install -y java-1.8.0-openjdk \
    && yum clean all \
    && rm -rf /var/cache/yum/*

# start gala-gopher
ENTRYPOINT [ "/entrypoint.sh" ]

CMD [ "/usr/bin/gala-gopher" ]
